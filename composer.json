{
    "name": "nihilsen/laravel-fossbilling",
    "description": "A FOSSBilling API bridge for Laravel.",
    "keywords": [
        "nihilsen",
        "laravel",
        "laravel-fossbilling"
    ],
    "homepage": "https://github.com/nihilsen/laravel-fossbilling",
    "license": "MIT",
    "authors": [
        {
            "name": "nihilsen",
            "email": "git@nihilsen.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "spatie/laravel-package-tools": "^1.13.0",
        "illuminate/contracts": "^9.0"
    },
    "require-dev": {
        "guzzlehttp/guzzle": "^7.5",
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^6.0",
        "orchestra/testbench": "^7.0",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-laravel": "^1.1",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Nihilsen\\FOSSBilling\\": "src",
            "Nihilsen\\FOSSBilling\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nihilsen\\FOSSBilling\\Tests\\": "tests"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Nihilsen\\FOSSBilling\\ServiceProvider"
            ],
            "aliases": {
                "FOSSBilling": "Nihilsen\\FOSSBilling\\Facades\\FOSSBilling"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
